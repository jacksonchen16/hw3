<h1><%= @place["name"] %></h1>

<div class="row">
  <% for post in @posts %>
    <div class="col-3">
      <h2><%= post["title"] %></h2>
      <h5><%= post["posted_on"] %></h5>
      <h4><%= post["description"] %></h4>
    </div>
  <% end %>
</div>

<p>
    <a href="/places"> Back to all places </a>
</p>

<a href="/posts/new?place_id= <%= @place["id"] %>">New Post</a>